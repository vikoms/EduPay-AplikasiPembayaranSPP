<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#B1B1B1</item>
    </style>



    <style name="textStyleRedMedium" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
    </style>
    <style name="textTitleForm" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="textTitleDetailSiswa" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>
    <style name="textTitleDetailSiswa.dialogPembayaran" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textContentDetailSiswa" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>



    <style name="editTextCustom" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/background_form_item</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
    </style>
    <style name="spinnerCustom" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/background_form_item</item>
    </style>

    <style name="editTextCustom.entryDataDate">
        <item name="android:drawableLeft">@drawable/ic_date_range</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog"/>

</resources>
